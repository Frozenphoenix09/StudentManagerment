@{
    ViewBag.Title = "Index";
}

<link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/lib/datatables/css/dataTables.jqueryui.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />


<div class="container">
    <h3 class="text-primary">Students</h3>
    <hr />
    <a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("Create","Student")')"><i class="fa fa-plus"></i> Add New</a>
    <table id="studentTable" class="table table-bordered table-striped dt-responsive nowrap">
        <thead>
            <tr>
                <th>STT</th>
                <th>Name</th>
                <th>Date of birth</th>
                <th>Address</th>
                <th>Class</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
    <div class="modal fade" role="dialog" id="deleteModal" aria-hidden="true" aria-labelledby="deleteModal">
        <div class="modal-dialog" role="document"></div>
        <div class = "modal-content" id="deleteModalBody"></div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/datatables/js/dataTables.jqueryui.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script src="~/js/studentsDatatable.js"></script>
}