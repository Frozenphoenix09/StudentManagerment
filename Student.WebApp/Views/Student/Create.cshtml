@model Student.Model.Models.StudentModels.StudentModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Create";
}
<h1>Student Create</h1>
<form asp-controller="Student" asp-action="Create" method="post">
    <div class="form-layout form-layout-4">
        <div class="row mg-t-20">
            <label class="col-sm-4 form-control-label"> Name <span class="text-danger">*</span></label>
            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div><!-- row -->
         <div class="row mg-t-20">
            <label class="col-sm-4 form-control-label"> Address <span class="text-danger">*</span></label>
            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                <input type="text" class="form-control" asp-for="Address">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div><!-- row -->
         <div class="row mg-t-20">
            <label class="col-sm-4 form-control-label"> Date of birth <span class="text-danger"> *</span></label>
            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                <input type="datetime-local" class="form-control" asp-for="DateOfBirth">
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div><!-- row -->   
        <div class="form-layout-footer mg-t-30">
            <button class="btn btn-primary bd-0">Create</button>
            <button class="btn btn-secondary bd-0"  asp-controller="Student" asp-action="Index">Cancel</button>
        </div><!-- form-layout-footer -->
    </div><!-- form-layout -->
</form>